@model Question3.Models.Expense
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddExpense</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="form-horizontal" style="width:500px;margin-left:450px;margin-top:100px"> 
        <h1>ADD EXPENSE</h1>
        @using (Html.BeginForm("AddExpense", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label class="control-label">Category</label>
                <div>
                    @Html.DropDownListFor(model => model.CategoryID, (List<SelectListItem>)ViewBag.categorys, "Select Category", new { @class = "form-control m-bot15" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Enter Amount</label>
                <div>
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Enter Explain</label>
                <div>
                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Enter Date</label>
                <div>
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required", @type = "date" } })
                </div>
            </div>
            <div style="float:right;margin-top:10px">
                <input type="submit" value="Add" class="btn btn-danger btn-sm pull-left" style="width:100px;">
            </div>
            <div style="float:left;margin-top:10px">
                <a style="width:100px;" class="btn btn-success btn-sm pull-left" href="/Home/Index/">Back</a>
            </div>
        }
    </div>
</body>
</html>
